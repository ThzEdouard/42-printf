all:		${NAME}

clean:
		@make clean -C libft
		@${RM} ${OBJS}
		@${RM} ${BONUS_OBJS}

fclean:		clean
		@make fclean -C libft
		@${RM} ${NAME}

re:		fclean all


.PHONY:		all clean fclean re
